        // Update Accnotification
        function AccupdateNotification() {
            $('#AccnotiContent').empty();
            $('#AccnotiContent').append($('<li>Loading...</li>'));
            $.ajax({
                type: 'GET',
                url: '/Portal/GetAnnouncementsList',
                success: function (response) {
                    $('#AccnotiContent').empty();
