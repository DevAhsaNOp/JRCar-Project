                    type: "POST",
                    url: "@Url.Action("SetSession", "Portal")",
                    data: JSON.stringify({ RemovedImages: previousRemoved }),
                    contentType: "application/json; charset=utf-8",
                    success: function () {
                        console.log('ok');
                    }
                });
