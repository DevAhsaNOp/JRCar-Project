            $("#MakePayShow #ShowroomID").change(function () {
                var ShowroomId = $(this).val();
                $('#loader').show();
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("GetShowroomData", "Portal")",
                    data: JSON.stringify({ ShowroomID: ShowroomId }),
                    contentType: "application/json; charset=utf-8",
