<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Dashboard 2</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <style>
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        textarea:-webkit-autofill,
        textarea:-webkit-autofill:hover,
        textarea:-webkit-autofill:focus,
        select:-webkit-autofill,
        select:-webkit-autofill:hover,
        select:-webkit-autofill:focus {
            -webkit-text-fill-color: #fff !important;
            -webkit-box-shadow: 0 0 0 1000px #4183bba3 inset !important;
        }

        .custom-file-upload {
            background-color: #577a9f;
            padding: 6px;
            border: 1px solid #e3e3e3;
            border-radius: 5px;
            border: 1px solid #ccc;
            display: inline-block;
            padding: 6px 12px;
            cursor: pointer;
            width: 8rem;
            margin-top: 3px;
        }

        .dark-mode .close, .dark-mode .mailbox-attachment-close {
            color: #ffffff;
            text-shadow: 0 1px 0 #ffffff;
        }

        .alert .close, .alert .mailbox-attachment-close {
            color: #fff;
            opacity: 1;
        }

        .dynamicImage {
            height: 150px !important;
            width: 150px !important;
            margin: 10px !important;
            border: 2px solid #ededed !important;
        }

        #dynamicImage {
            background: #f8f8f8;
            border: 1px solid #ededed;
            border-radius: 2px;
        }
    </style>
</head>
@if (User.Identity.IsAuthenticated)
{
    <body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
        <div class="wrapper">

            <!-- Preloader -->
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__wobble" src="~/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
            </div>

            <!-- Navbar -->
            @Html.Partial("_HeaderPortal")
            <!-- /.navbar -->
            <!-- Main Sidebar Container -->
            @Html.Partial("_SidebarPortal")
            <!-- /. main-sidebar-container -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                @RenderBody()
            </div>
            <!-- /.content-wrapper -->
            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
            <!-- Main Footer -->
            @Html.Partial("_FooterPortal")
            <!-- /. main-footer -->

        </div>
        <!-- ./wrapper -->
        <!-- REQUIRED SCRIPTS -->
        <!-- jQuery -->
        <script src="~/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Select2 -->
        <script src="~/plugins/select2/js/select2.full.min.js"></script>
        <script src="~/plugins/select2/js/select2.min.js"></script>
        <!-- overlayScrollbars -->
        <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/dist/js/adminlte.js"></script>
        <!-- PAGE PLUGINS -->
        <!-- jQuery Mapael -->
        <script src="~/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
        <script src="~/plugins/raphael/raphael.min.js"></script>
        <script src="~/plugins/jquery-mapael/jquery.mapael.min.js"></script>
        <script src="~/plugins/jquery-mapael/maps/usa_states.min.js"></script>
        <!-- ChartJS -->
        <script src="~/plugins/chart.js/Chart.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="~/dist/js/demo.js"></script>
        <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
        <script src="~/dist/js/pages/dashboard2.js"></script>
        <script src="~/scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/scripts/jquery.signalR-2.4.3.min.js"></script>
        <script src="~/signalr/hubs"></script>
        @* Add css  *@
        @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
        @* Add jquery code for Get Notification & setup signalr *@
        <script type="text/javascript">
            $(document).ready(function () {
                $('.select2').select2()

                //Initialize Select2 Elements
                $('.select2bs4').select2({
                    theme: 'bootstrap4'
                })

                $('#CategoryD').show();
                $('#SubCategoryD').hide();
                $('#ManufacD').hide();
                $('#ModelD').hide();
                $('#ModelYearD').hide();
                //$('#CondD').hide();

                $("#SubCategoryName").on("change", function () {
                    var ar = $('#SubCategoryName').select2('data');
                    var da = ar[0].id
                    if (da > 0) {
                        $('#ModelYearD').show();
                    }
                });

                $("#Year").on("change", function () {
                    var ar = $('#Year').select2('data');
                    var da = ar[0].id
                    if (da > 0) {
                        $('#ManufacD').show();
                    }
                });

                $("#CategoryName").change(function () {
                    var CategoryId = $(this).val();
                    $.ajax({
                        type: "post",
                        url: "/Website/GetSubCategoryList?CategoryId=" + CategoryId,
                        contentType: "html",
                        success: function (response) {
                            $('#SubCategoryD').show();
                            $("#SubCategoryName").empty();
                            $("#SubCategoryName").append(response);
                        }
                    })
                })

                $("#Manufacturer_Name").change(function () {
                    var MakeId = $(this).val();
                    $.ajax({
                        type: "post",
                        url: "/Website/GetModelsList?MakeId=" + MakeId,
                        contentType: "html",
                        success: function (response) {
                            $('#ModelD').show();
                            $("#Manufacturer_CarModelName").empty();
                            $("#Manufacturer_CarModelName").append(response);
                        }
                    })
                })

                // SignalR js code for start hub and send receive notification
                var notificationHub = $.connection.notificationHub;
                $.connection.hub.start().done(function () {
                    console.log('Notification hub started');
                });

                //SignalR method for push server message to client
                notificationHub.client.DisplayNoti = function (message) {
                    if (message && message.toLowerCase() == "added") {
                        console.log('Hey Count');
                        updateNotificationCount();
                    }
                }


                updateNotification();
                GetCount();
                updateNotificationCount();
                $('a.noti').click(function (e) {
                    e.stopPropagation();
                    var count = 0;
                    count = parseInt($('span.count').html()) || 0;
                    console.log('a.noti outer' + count);

                    //Only load notification if not already loaded
                    if (count > 0) {
                        updateNotification();
                        sessionStorage.setItem("count", 0);
                        console.log('a.noti inner if' + count);
                        $('.noti-content').show();
                        updateNotificationRead();
                    }
                    else if ($('.noti-content').css('display') == 'block') {
                        $('.noti-content').hide();
                    }
                    else if ($('.noti-content').css('display') == 'none') {
                        $('.noti-content').show();
                        updateNotificationRead();
                    }
                    $('span.count', this).html('');
                })

                // Hide notifications
                $('html').click(function () {
                    $('.noti-content').hide();
                })

                //$('a.noti').click(function () {
                //    if ($('.noti-content').css('display') == 'block') {
                //        console.log('Here');
                //        $('.noti-content').hide();
                //    }
                //})


            });

            function GetCount() {
                var count = sessionStorage.getItem("count");
                console.log('a.noti outer' + count);

                if (count > 0) {
                    $('span.count').html(count);
                }
                else {
                    $('span.count', this).html('');
                }
            }

            // Update notification
            function updateNotification() {
                $('#notiContent').empty();
                $('#notiContent').append($('<li>Loading...</li>'));
                $.ajax({
                    type: 'GET',
                    url: '/Portal/GetNotificationsList',
                    success: function (response) {
                        $('#notiContent').empty();
                        console.log(response);
                        if (response.length == 0) {
                            $('#notiContent').append($('<a href="#" class="dropdown-item"><i class="fas fa-envelope mr-2"></i> No Notification Available <span class="float-right text-muted text-sm"> 3 mins</span></a>'));
                        }
                        $.each(response, function (index, value) {
                            $('#notiContent').append($('<a href="#" class="dropdown-item"> <i class="fas fa-envelope mr-2"></i> ' + value.Title + ' <span class="float-right text-muted text-sm"> 3 mins</span></a>'));
                            //$('#notiContent').append($('<li>New Ad Alert: ' + value.Title + ' is less than (' + value.Description + ') </li>'));
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                })
            }

            // Update notification count
            function updateNotificationCount() {
                var count = 0;
                $.ajax({
                    type: 'GET',
                    url: '/Portal/GetNotificationsListCount',
                    success: function (response) {
                        console.log('GetNotificationsListCount:: ' + response);
                        count = response;
                        if (count > 0) {
                            $('span.count').html(count);
                        }
                        else {
                            $('span.count').html('');
                        }
                        console.log('updateNotificationCount' + count);
                        sessionStorage.setItem("count", count);
                    },
                    error: function (error) {
                        console.log(error);
                    }
                })
            }

            // Notifications Change to Read When NotiFication Icon Press
            function updateNotificationRead() {
                $.ajax({
                    type: 'GET',
                    url: '/Portal/ChangeNotificationToAsRead',
                    success: function (response) {
                        console.log('GetNotificationsListRead:: ' + response);
                        sessionStorage.setItem("count", 0);
                    },
                    error: function (error) {
                        console.log(error);
                    }
                })
            }

            var loadProfile = function (event) {
                var files = event.target.files;
                for (var i = 0; i < files.length; i++) {
                    $("#dynamicImage").attr("src", URL.createObjectURL(event.target.files[i]));
                }
            }

            $(document).ready(function () {
                $('#choose-file').change(function () {
                    var i = $(this).prev('label').clone();
                    var file = $('#choose-file')[0].files[0].name;
                    $(this).prev('label').text(file);
                });
            });

        </script>
    </body>
}
</html>
