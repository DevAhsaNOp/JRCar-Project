            var ar = $('#ManufacturerCarModelID').select2('data');
            var da = ar[0].id
            if (da > 0) {
                $('[aria-labelledby="select2-ManufacturerCarModelID-container"]').css('border', '1px solid #ededed');
                $('#ManufacturerCarModelID').removeClass("input-validation-error");
                $('#ModelYearD').show();
