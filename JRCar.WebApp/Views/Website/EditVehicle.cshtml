<script>
    $(document).ready(function () {

        $('#CategoryId').show();
        $('#SubCategoryD').show();
        $('#ManufacD').show();
        $('#ModelD').show();
        $('#ModelYearD').show();
        $('#CondD').show();
        $('#StateD').show();
        $('#CityD').show();
        $('#AreaD').show();

        $("#CategoryId").on("change", function () {
            console.log("CategoryId change");
            var ar = $('#CategoryId').select2('data');
            var da = ar[0].id
            if (da > 0) {
                $('[aria-labelledby="select2-CategoryId-container"]').css('border', '1px solid #ededed');
                $('#CategoryId').removeClass("input-validation-error");
                $('#SubCategoryD').show();
            }
            else {
                $('[aria-labelledby="select2-CategoryId-container"]').css('border', '1px solid #f16060');
            }
        });

        $("#SubCategoryId").on("change", function () {
            console.log("SubCategoryId change");
            var ar = $('#SubCategoryId').select2('data');
            var da = ar[0].id
            if (da > 0) {
                $('[aria-labelledby="select2-SubCategoryId-container"]').css('border', '1px solid #ededed');
                $('#SubCategoryId').removeClass("input-validation-error");
                $('#ManufacD').show();
            }
            else {
                $('[aria-labelledby="select2-SubCategoryId-container"]').css('border', '1px solid #f16060');
            }
        });

        $("#ManufacturerId").on("change", function () {
            console.log("ManufacturerId change");
            var ar = $('#ManufacturerId').select2('data');
            var da = ar[0].id
            if (da > 0) {
                $('[aria-labelledby="select2-ManufacturerId-container"]').css('border', '1px solid #ededed');
