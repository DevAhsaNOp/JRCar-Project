        });

        $("#AreaID").on("change", function () {
            console.log("Area change");
            var ar = $('#AreaID').select2('data');
            var da = ar[0].id
            if (da > 0) {
                $('[aria-labelledby="select2-AreaID-container"]').css('border', '1px solid #ededed');
                $('#AreaID').removeClass("input-validation-error");
            }
            else {
                $('[aria-labelledby="select2-AreaID-container"]').css('border', '1px solid #f16060');
            }
        });

        $('.input-images-1').imageUploader();

        $('#postvehicle').on("click", function () {
            Validations();
            var a = $(".uploaded")[0].children.length + $(".uploaded")[1].children.length;
            if (a < 5) {
                $("#ImgErrorMsg").show();
                $("#ImgErrorMsg").text("Minimum 5 images you need to upload");
                var element = document.getElementsByClassName("image-uploader");
                for (item of element) {
                    item.style.border = "2px solid #f16060";
                }
                $('html, body').animate({
                    scrollTop: $("#images-not").offset().top
                }, 100);
                return false;
            }
            else {
                ImageChangeData();
            }
        });

        function ImageChangeData() {
            var previousRemoved = JSON.parse(sessionStorage.getItem("DeletedFiles"));
            $.ajax({
                type: "POST",
                url: "@Url.Action("SetSession", "Website")",
                data: JSON.stringify({ RemovedImages: previousRemoved }),
                contentType: "application/json; charset=utf-8",
                success: function () {
                    console.log('ok');
                }
            });
        }

        $('.delete-image1').on("click", function () {
            var previousRemoved = JSON.parse(sessionStorage.getItem("DeletedFiles"));
            var newValue = $(this).parent().closest('.uploaded-image').find("img")[0].attributes[0].textContent;
            $(this).parent().closest('.uploaded-image').remove();
            deletedFilesLst = [];
            if (previousRemoved != null) {
                previousRemoved.push(newValue);
                sessionStorage.setItem('DeletedFiles', JSON.stringify(previousRemoved));
            }
            else {
