        $("#StateID").on("change", function () {
            console.log("State change");
            var ar = $('#StateID').select2('data');
            var da = ar[0].id
            if (da > 0) {
                $('[aria-labelledby="select2-StateID-container"]').css('border', '1px solid #ededed');
                $('#StateID').removeClass("input-validation-error");
                $('#CityD').show();
                $('#AreaD').hide();
