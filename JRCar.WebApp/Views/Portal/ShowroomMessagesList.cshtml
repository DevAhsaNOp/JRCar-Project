@model IEnumerable<JRCar.DAL.DBLayer.NotiShow>

@{
    ViewBag.Title = "Showroom Messages";
    Layout = "~/Views/Shared/_StarterPortal.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>All Messages</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">All Messages</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Timelime example  -->
            <div class="row">
                <div class="col-md-12">
                    @if (Model != null)
                    {
                        <!-- The time line -->
                        <div class="timeline">
                            <!-- timeline time label -->
                            @foreach (var item in Model)
                            {
                                <div class="time-label">
                                    <span class="bg-red">@item.CreatedOn.ToString("dd MMM, yyyy")</span>
                                </div>
                                <div>
                                    <i class="fas fa-envelope bg-gradient-blue"></i>
                                    <div class="timeline-item">
                                        <span class="time"><i class="fas fa-clock"></i>@item.CreatedOn.ToString("dd MMM, yyyy hh:mm:ss tt")</span>
                                        <h3 class="timeline-header"><a href="javascript:void(0)">@item.FromUserName</a> messaged you for Query!</h3>
                                        <div class="timeline-body">
                                            @*<span style="font-size:14px" class="badge badge-success">Appointment Booked</span>*@
                                            <h6 style="text-transform:capitalize !important">
                                                <b>Name: </b> @item.FromUserName
                                            </h6>
                                            <h6>
                                                <b>Email: </b> @item.Email
                                            </h6>
                                            <h6>
                                                <b>Phone Number: </b> @item.PhoneNumber
                                            </h6>
                                            <h6>
                                                <b>Message: </b>
                                            </h6>
                                            <p style="margin-bottom: 0;text-align:justify">
                                                @item.Message
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div>
                                <i class="fas fa-clock bg-gray"></i>
                            </div>
                        </div>
                    }
                    else
                    {
                        <h4>No Messages Available</h4>
                    }
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.timeline -->
    </section>
    <!-- /.content -->
    <script>
        document.getElementById('ContactPage').classList.add('active')

        setTimeout(RemoveDates(), 1);
        function RemoveDates() {
            var val = document.querySelectorAll('.time-label .bg-red')
            for (let index = 0; index < val.length; index++) {
                if (index > 0) {
                    if (val[index].innerHTML == val[index - 1].innerHTML) {
                        val[index].remove();
                    }
                    else {
                    }
                }
                else {
                }
            }
        }
    </script>
}