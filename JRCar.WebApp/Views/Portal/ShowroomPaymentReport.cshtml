@model JRCar.BOL.Validation_Classes.ValidationPayment

@{
    ViewBag.Title = "Maintenance Report";
    Layout = "~/Views/Shared/_StarterPortal.cshtml";
}
<style>
    .table-bordered td, .table-bordered th, .table-bordered {
        border: none !important;
    }

    .table td, .table th {
        padding: 0.75rem;
        vertical-align: baseline;
    }

    #StatusA .badge {
        padding: 0.25em 0.8em !important;
        font-size: 14px !important;
    }

    .btnAction {
        border: none !important;
        font-size: 18px !important;
    }

    .btnEdit {
        background: #f79c2b;
        color: white;
        box-shadow: 0px 2px 7px 2px #f79c2b42;
        border-radius: 5px;
        margin-right: 5px !important;
    }

    .btnView {
        background: #2bacf7;
        color: white;
        box-shadow: 0px 2px 7px 2px #92d4fb;
        border-radius: 5px;
        margin-right: 5px !important;
    }

    @@media print {
        thead {
            print-color-adjust: exact !important;
            -webkit-print-color-adjust: exact !important;
            background-color: lightslategray !important;
            color: black !important;
        }
    }
</style>
<script src="~/scripts/jquery-3.6.0.min.js"></script>

@if (User.Identity.IsAuthenticated)
{
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Maintenance Report</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Maintenance Report</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card" style="width:100%;height:98%">
                        <div class="card-header bg-cyan">
                            <h3 class="card-title">Dealer @Model.ShowroomName</h3>
                        </div>
                        <div class="card-body" id="example99">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-lg-12">
                                    @if (TempData["SuccessMsg"] != null)
                                    {
                                        <div class="alert alert-info alert-dismissable">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                            <i class="icon-info-with-circle"></i><span>@Html.Raw(TempData["SuccessMsg"])</span>
                                        </div>
                                    }
                                    @if (TempData["ErrorMsg"] != null)
                                    {
                                        <div class="alert alert-danger alert-dismissable">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                            <i class="icon-blocked"></i><span>@Html.Raw(TempData["ErrorMsg"])</span>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <h4 class="text-bold bg-gradient-primary text-center p-1">Union Monthly Maintenance Detail</h4>
                                    <table id="example3ContP" class="table table-bordered table-striped table-hover">
                                        <thead>
                                            <tr style="background: lightslategray !important; color: aliceblue !important;">
                                                <th>S.No </th>
                                                <th>Month</th>
                                                <th>Year</th>
                                                <th>Maintenance</th>
                                                <th>Recieved</th>
                                                <th>Discount</th>
                                                <th>Balance</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var i = 1;
                                            }
                                            @foreach (var item in Model.datesDs)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>
                                                        @item.Month
                                                    </td>
                                                    <td>
                                                        @item.Year
                                                    </td>
                                                    <td>
                                                        @item.Recievable
                                                    </td>
                                                    <td>
                                                        @item.Recieved
                                                    </td>
                                                    <td>
                                                        @item.Discount
                                                    </td>
                                                    <td>
                                                        @item.Balance
                                                    </td>
                                                    <td id="StatusA">
                                                        @if (item.IsPaid)
                                                        {
                                                            <span class="badge badge-success"> Paid </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger"> Not Paid </span>
                                                        }
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        document.getElementById('ReportsNav').classList.add('active')
        document.getElementById('TransactionReportPage').classList.add('active')
    </script>
}
